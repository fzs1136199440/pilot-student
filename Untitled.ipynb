    "from random import randrange\n",
    "\n",
    "while True:\n",
    "    n = randrange(-2, 5)\n",
    "    if n < 0:\n",
    "        break\n",
    "    elif n % 2 == 0:\n",
    "        print(n, 'is even')\n",
    "    else:\n",
    "        print(n, 'is odd')"
